{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "es2020.number",
      "DOM"
    ],
    "module": "ESNext", // Output ES modules (.mjs)
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist", // Ensure declaration files are shared
    "outDir": "./dist/esm", // ES Module output directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}